<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Sylius\Component\Promotion\Model\Action" table="sylius_promotion_action">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <many-to-one field="promotion" target-entity="Sylius\Component\Promotion\Model\PromotionInterface" inversed-by="actions">
            <join-column name="promotion_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <one-to-many field="benefits" target-entity="Sylius\Component\Promotion\Model\BenefitInterface" mapped-by="action">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <one-to-many field="filters" target-entity="Sylius\Component\Promotion\Model\FilterInterface" mapped-by="action">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

    </mapped-superclass>

</doctrine-mapping>
